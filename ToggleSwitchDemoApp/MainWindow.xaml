<Window
    x:Class="ToggleSwitchDemoApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ToggleSwitchLibrary;assembly=ToggleSwitchLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="clr-namespace:ToggleSwitchDemoApp.ViewModels"
    Title="ToggleSwitch Demo"
    Width="300"
    Height="200">

    <StackPanel Margin="20">
        <controls:ToggleSwitch IsChecked="{Binding IsFeatureEnabled}" />

        <Button
            Margin="0,10,0,0"
            Click="DarkTheme_Click"
            Content="Switch to Dark Theme" />
        <Button Click="LightTheme_Click" Content="Switch to Light Theme" />
    </StackPanel>
</Window>